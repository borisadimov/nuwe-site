.header
  .menu(class="#{ container.homePage ? 'homepage' : ''}")
    img.logo src=@nuwe_logo
    - for container in contentful.containers.order("order", "ASC")
      a.link(href="/#{container.slug}.html")
        = container.slug

    a.send_mail(href="#")
      img.message_icon src=@message_icon
    .slug = container.slug
    .toggle_menu



.fullpage_menu
  .close

  .menu
    a(href="/") Nuwe
    a(href="/digital.html") Integration
    a(href="/cube.html") Development
    a(href="/technology.html") Technology

    .social
      a.gh(href="#")
        img(src=path('gh.png'))
      a.tw(href="#")
        img(src=path('tw.png'))
      a.in(href="#")
        img(src=path('in.png'))

    a(href="#")
      img.message_icon src=path('message_icon_white.png')